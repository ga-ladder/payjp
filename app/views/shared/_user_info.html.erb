<%if user_signed_in? then %> 
  <div name="userInfo">
    Your email:
    <%= current_user.email %>
  </div>
  <%= link_to "sign_out", destroy_user_session_path, method: :delete %>
  <div name=cardInfo>
    <% if current_user.card? then %>
      <% current_user.cards.each do |card| %>
        <div>
          <p>brand: <%= card.brand %><p>
          <p><%= card.exp_month.to_s + "/" + card.exp_year.to_s %></p>
          <p><%= "**** **** **** " + card.last4 %></p>
        </div>
      <% end %>
    <% else %>
      <p>カードを持ってません</p>
    <% end %>
  </div>
  <% binding.pry %>
<% end %>
